# Desactiva listado de directorios
Options -Indexes

# Deniega acceso a archivos sensibles
<FilesMatch ".*\.(log|ini|htaccess)$">
    deny from all
</FilesMatch>

# Motor de reescritura
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ✅ Permite acceder directamente a assets, images, etc.
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(assets|images|uploads)/ - [L,NC]

    # ✅ Enrutamiento MVC
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/(.*)/(.*)$ index.php?controller=$1&method=$2&$3 [L,QSA]
    RewriteRule ^(.*)/(.*)$ index.php?controller=$1&method=$2 [L,QSA]
    RewriteRule ^(.*)$ index.php?controller=$1 [L,QSA]
</IfModule>