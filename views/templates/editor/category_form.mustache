{{> partials/header}}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="app-card p-5 text-dark">
                <h2 class="fw-bold mb-4">{{#is_edit}}Editar{{/is_edit}}{{^is_edit}}Nueva{{/is_edit}} Categoría</h2>
                
                <form action="/editor/{{action}}" method="POST" class="needs-validation" novalidate>
                    {{#is_edit}}
                    <input type="hidden" name="category_id" value="{{category.category_id}}">
                    {{/is_edit}}
                    
                    <div class="mb-4">
                        <label for="category_name" class="form-label fw-semibold">Nombre de la Categoría</label>
                        <input type="text" class="form-control form-control-lg" id="category_name" name="category_name" value="{{category.category_name}}" required placeholder="Ej: Historia">
                        <div class="invalid-feedback">
                            Por favor ingresa un nombre para la categoría.
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/editor/categories" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-4">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{> partials/footer}}
