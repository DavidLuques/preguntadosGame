{{> partials/header}}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="app-card p-4 p-md-5 text-dark">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold mb-0">Preguntas</h2>
                    <a href="/editor/addQuestion" class="btn btn-primary shadow-sm">
                        <i class="bi bi-plus-lg me-1"></i>Nueva Pregunta
                    </a>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Pregunta</th>
                                <th scope="col">Categoría</th>
                                <th scope="col">Dificultad</th>
                                <th scope="col" class="text-center">Vistas</th>
                                <th scope="col" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#questions}}
                            <tr>
                                <td><span class="badge bg-secondary">{{question_id}}</span></td>
                                <td class="text-truncate" style="max-width: 300px;" title="{{question_text}}">{{question_text}}</td>
                                <td><span class="badge bg-info text-dark">{{category_name}}</span></td>
                                <td>
                                    {{#difficulty_level}}
                                        <span class="badge bg-light text-dark border">{{difficulty_level}}</span>
                                    {{/difficulty_level}}
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary rounded-pill">{{view_count}}</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a href="/editor/editQuestion?id={{question_id}}" class="btn btn-sm btn-outline-primary">Editar</a>
                                        <a href="/editor/deleteQuestion?id={{question_id}}" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de eliminar esta pregunta?')">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                            {{/questions}}
                            {{^questions}}
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">No hay preguntas registradas.</td>
                            </tr>
                            {{/questions}}
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-4">
                    <a href="/editor/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver al Panel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{{> partials/footer}}
