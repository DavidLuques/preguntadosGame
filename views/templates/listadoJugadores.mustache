{{>partials/header}}

<div class="container">
    <h1>Listado de Jugadores</h1>

    <div class="table-responsive">
        <div class="d-flex justify-content-end">
            <button class="btn btn-primary mb-3">
                <a class="text-white text-decoration-none" href="/partida/inicioPartida">Jugar partida</a>
            </button>
        </div>
        <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Foto</th>
                    <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Mail</th>
                    <th>Pa√≠s</th>
                    <th>Ciudad</th>
                    <th>Sexo</th>
                    <th>Nacimiento</th>
                    <th>Fecha Alta</th>
                    <th>Rol</th>
                    <th>Puntaje</th>
                    <th>Jugadas</th>
                    <th>Ganadas</th>
                    <th>Perdidas</th>
                    <th>Nivel</th>
                </tr>
            </thead>
            <tbody>
                {{#jugadores}}
                    <tr>
                        <td>{{id}}</td>
                        <td>
                            {{#fotoPerfil}}
                                <img src="{{fotoPerfil}}" alt="Foto de {{usuario}}">
                            {{/fotoPerfil}}
                            {{^fotoPerfil}}
                                <img src="" alt="Sin foto">
                            {{/fotoPerfil}}
                        </td>
                        <td>{{usuario}}</td>
                        <td>{{nombre}}</td>
                        <td>{{apellido}}</td>
                        <td>{{mail}}</td>
                        <td>{{pais}}</td>
                        <td>{{ciudad}}</td>
                        <td>{{sexo}}</td>
                        <td>{{nacimiento}}</td>
                        <td>{{fechaAlta}}</td>
                        <td>{{rol}}</td>
                        <td>{{puntajeTotal}}</td>
                        <td>{{partidasJugadas}}</td>
                        <td>{{partidasGanadas}}</td>
                        <td>{{partidasPerdidas}}</td>
                        <td>{{nivelDificultad}}</td>
                    </tr>
                {{/jugadores}}
                {{^jugadores}}
                    <tr>
                        <td colspan="17" class="text-center text-muted">No hay jugadores registrados</td>
                    </tr>
                {{/jugadores}}
            </tbody>
        </table>
    </div>
</div>

{{>partials/footer}}

