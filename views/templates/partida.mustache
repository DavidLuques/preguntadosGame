{{>partials/header}}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">¡A empezado la partida!</h2>
                    <p class="card-text">Gira la ruleta para conocer que categoria te tocará.</p>
                    <section class="roulette-container">

                        <div id="selector"></div>

                        <div class="roulette-border">
                            <div id="roulette">

                                <div class="roulette-section">
                                    <div class="roulette-section-container">
                                        <p>Historia</p>
                                    </div>
                                </div>

                                <div class="roulette-section">
                                    <div class="roulette-section-container">
                                        <p>Ciencia</p>
                                    </div>
                                </div>

                                <div class="roulette-section">
                                    <div class="roulette-section-container">
                                        <p>Deportes</p>
                                    </div>
                                </div>

                                <div class="roulette-section">
                                    <div class="roulette-section-container">
                                        <p>Geografía</p>
                                    </div>
                                </div>

                                <div class="roulette-section">
                                    <div class="roulette-section-container">
                                        <p>Entretenimiento</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="button-container">
                        <button type="button" id="spin">¡Girar!</button>
                        <button type="button" id="reset">Resetear</button>
                        </div>

                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

{{>partials/footer}}

