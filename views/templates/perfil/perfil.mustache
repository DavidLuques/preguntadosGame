{{> partials/header}}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="app-card p-4 p-md-5 text-dark">
                
                {{#success}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{#success_data_updated}}Datos actualizados correctamente.{{/success_data_updated}}
                    {{#success_password_updated}}Contraseña actualizada correctamente.{{/success_password_updated}}
                    {{#success_picture_updated}}Foto de perfil actualizada correctamente.{{/success_picture_updated}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/success}}

                {{#error}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{error}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {{/error}}

                <div class="row">
                    <!-- Sidebar: Profile Picture & Stats -->
                    <div class="col-md-4 text-center mb-4 mb-md-0 border-end">
                        <div class="mb-4">
                            <img src="{{#user.profile_picture}}/{{user.profile_picture}}{{/user.profile_picture}}{{^user.profile_picture}}/images/default_profile.png{{/user.profile_picture}}" 
                                 alt="Foto de Perfil" 
                                 class="rounded-circle img-thumbnail shadow-sm" 
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        </div>
                        
                        <h3 class="fw-bold mb-1">{{user.username}}</h3>
                        <p class="text-muted mb-4">Jugador</p>

                        <div class="d-flex justify-content-center gap-3 mb-4">
                            <div class="text-center">
                                <h5 class="fw-bold mb-0 text-primary">{{user.total_score}}</h5>
                                <small class="text-muted">Puntos</small>
                            </div>
                            <div class="text-center">
                                <h5 class="fw-bold mb-0 text-success">{{user.games_played}}</h5>
                                <small class="text-muted">Partidas</small>
                            </div>
                        </div>

                        <div class="text-center mb-4">
                            <h6 class="fw-bold mb-2 small text-muted">Tu Código QR</h6>
                            <div class="bg-white p-2 d-inline-block rounded shadow-sm border">
                                <img src="{{qr_code_url}}" alt="QR Code del Perfil" class="img-fluid" style="width: 120px; height: 120px;">
                            </div>
                        </div>

                        <hr>

                        <form action="/perfil/changePicture" method="POST" enctype="multipart/form-data" class="mt-4">
                            <div class="mb-3">
                                <label for="profile_picture" class="form-label small text-muted">Cambiar Foto de Perfil</label>
                                <input type="file" class="form-control form-control-sm" id="profile_picture" name="profile_picture" accept="image/*" required>
                            </div>
                            <button type="submit" class="btn btn-sm btn-outline-primary w-100">Subir Nueva Foto</button>
                        </form>
                    </div>

                    <!-- Main Content: Edit Forms -->
                    <div class="col-md-8 ps-md-5">
                        <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">Datos Personales</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="password-tab" data-bs-toggle="tab" data-bs-target="#password" type="button" role="tab">Seguridad</button>
                            </li>
                        </ul>

                        <div class="tab-content" id="profileTabsContent">
                            <!-- Personal Info Tab -->
                            <div class="tab-pane fade show active" id="info" role="tabpanel">
                                <form action="/perfil/updateData" method="POST">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label for="name" class="form-label">Nombre</label>
                                            <input type="text" class="form-control" id="name" name="name" value="{{user.name}}" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="lastname" class="form-label">Apellido</label>
                                            <input type="text" class="form-control" id="lastname" name="lastname" value="{{user.lastname}}" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="birth_year" class="form-label">Fecha de Nacimiento</label>
                                            <input type="date" class="form-control" id="birth_year" name="birth_year" value="{{user.birth_year_formatted}}" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="gender" class="form-label">Género</label>
                                            <select class="form-select" id="gender" name="gender" required>
                                                <option value="Masculino" {{#user.gender_is_masculino}}selected{{/user.gender_is_masculino}}>Masculino</option>
                                                <option value="Femenino" {{#user.gender_is_femenino}}selected{{/user.gender_is_femenino}}>Femenino</option>
                                                <option value="Otro" {{#user.gender_is_otro}}selected{{/user.gender_is_otro}}>Otro</option>
                                            </select>
                                        </div>
                                        <div class="col-12">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" required>
                                        </div>
                                        <div class="col-12">
                                <label class="form-label">Ubicación</label>
                                <div class="input-group">
                                    <input 
                                        type="text" 
                                        class="form-control" 
                                        id="location" 
                                        name="location"
                                        value="{{user.location}}"
                                        placeholder="Ej: Buenos Aires, Argentina">
                                    <span class="input-group-text">
                                        <img id="flag" src="{{flagUrl}}" width="32">
                                    </span>
                                </div>
                            </div>

                            <div class="col-12 mt-3">
                                <div id="map" style="height:300px;border-radius:10px;"></div>
                            </div>

                            <!-- INPUTS OCULTOS -->
                            <input type="hidden" id="lat" name="lat" value="{{user.lat}}">
                            <input type="hidden" id="lon" name="lon" value="{{user.lon}}">
                            <input type="hidden" id="country_code" name="country_code" value="{{user.country_code}}">

                                        <div class="col-12 mt-4">
                                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <!-- Password Tab -->
                            <div class="tab-pane fade" id="password" role="tabpanel">
                                <form action="/perfil/changePassword" method="POST">
                                    <div class="mb-3">
                                        <label for="current_password" class="form-label">Contraseña Actual</label>
                                        <input type="password" class="form-control" id="current_password" name="current_password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="new_password" class="form-label">Nueva Contraseña</label>
                                        <input type="password" class="form-control" id="new_password" name="new_password" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="confirm_password" class="form-label">Confirmar Nueva Contraseña</label>
                                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                                    </div>
                                    <button type="submit" class="btn btn-warning">Cambiar Contraseña</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
// --- MAPA ---
let lat = parseFloat(document.getElementById("lat").value || 0);
let lon = parseFloat(document.getElementById("lon").value || 0);

const map = L.map('map').setView([lat || 0, lon || 0], lat ? 13 : 2);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19 }).addTo(map);

let marker = (lat && lon) ? L.marker([lat, lon]).addTo(map) : null;

const input = document.getElementById("location");
const flag = document.getElementById("flag");
const API_KEY = "pk.8e06c88eb28f9a2fce1d0e3b80fb24cb";

// --- GEOCODIFICACIÓN ---
input.addEventListener("input", async () => {
    const q = input.value.trim();
    if (q.length < 2) return;

    const url = `https://api.geocodify.com/v2/geocode?api_key=${API_KEY}&q=${encodeURIComponent(q)}`;

    try {
        const res = await fetch(url);
        const data = await res.json();
        if (!data.response?.features?.length) return;

        const p = data.response.features[0];
        const lat = p.geometry.coordinates[1];
        const lon = p.geometry.coordinates[0];
        const code = p.properties.country_code || "";

        document.getElementById("lat").value = lat;
        document.getElementById("lon").value = lon;
        document.getElementById("country_code").value = code;

        flag.src = `https://flagsapi.com/${code.toUpperCase()}/flat/64.png`;

        map.setView([lat, lon], 13);

        if (marker) marker.setLatLon([lat, lon]);
        else marker = L.marker([lat, lon]).addTo(map);

    } catch (e) {
        console.error("Error en Geocodify:", e);
    }
});
</script>

