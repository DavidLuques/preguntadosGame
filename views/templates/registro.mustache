{{>partials/header}}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6">

            {{#success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{#mensaje}}{{mensaje}}{{/mensaje}}
                {{^mensaje}}Registrado correctamente. Revisá tu email para activar tu usuario.{{/mensaje}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/success}}

            {{#error}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{error}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/error}}

            <div class="card">
                <div class="card-body p-4 p-sm-5">

                    <div class="text-center mb-4">
                        <h1 class="h4 fw-bold mb-1">Crear cuenta</h1>
                        <p class="text-muted mb-0">Registrate para jugar</p>
                    </div>

                    <form action="index.php?controller=login&method=registro" 
                          method="POST" 
                          enctype="multipart/form-data"
                          class="needs-validation" 
                          novalidate>

                        <div class="mb-3">
                            <label class="form-label">Usuario *</label>
                            <input type="text" class="form-control" name="nombre" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña *</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirmar contraseña *</label>
                            <input type="password" class="form-control" id="password_confirm" name="password_confirm" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre *</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Apellido *</label>
                            <input type="text" class="form-control" name="lastname" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fecha de nacimiento *</label>
                            <input type="date" class="form-control" name="birth_year" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Género *</label>
                            <select class="form-select" name="gender" required>
                                <option value="">Seleccionar…</option>
                                <option>Masculino</option>
                                <option>Femenino</option>
                                <option>Otro</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>

                        <div class="mb-3 position-relative">
                            <label class="form-label">Ubicación (país / ciudad)</label>
                            <input type="text" class="form-control" id="location" name="location" placeholder="Ej: Buenos Aires, Argentina" autocomplete="off" autocapitalize="none" autocorrect="off" spellcheck="false">
                            <div id="location_results" class="list-group position-absolute w-100"></div>
                        </div>

                        <input type="hidden" id="lat" name="lat">
                        <input type="hidden" id="lon" name="lon">
                        <input type="hidden" id="country_code" name="country_code">

                        <div class="mb-3">
                            <div id="map" style="height: 300px; border-radius: 10px;"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Foto de perfil</label>
                            <input type="file" class="form-control" name="profile_picture" accept="image/*">
                        </div>

                        <button class="btn btn-success btn-lg w-100">Registrarme</button>
                    </form>

                    <div class="text-center mt-4">
                        <small>¿Ya tenés cuenta? 
                            <a href="index.php?controller=login&method=login">Iniciá sesión</a>
                        </small>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const pass = document.getElementById("password");
    const pass2 = document.getElementById("password_confirm");

    const validate = () => {
        pass2.setCustomValidity(pass.value !== pass2.value ? "No coincide" : "");
    };

    pass.addEventListener("input", validate);
    pass2.addEventListener("input", validate);
});
</script>


<script>
    document.addEventListener("DOMContentLoaded", () => {

    const locationInput = document.getElementById("location");
    const resultsBox = document.getElementById("location_results");
    const latInput = document.getElementById("lat");
    const lonInput = document.getElementById("lon");

    if (!locationInput || !resultsBox || !latInput || !lonInput) {
        console.error("Error: IDs no coinciden con el HTML.");
        return;
    }

    const map = L.map("map").setView([-34.6037, -58.3816], 13);
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png").addTo(map);

    let marker = null;

    locationInput.addEventListener("input", async () => {
        const query = locationInput.value.trim();

        if (query.length < 3) {
            resultsBox.innerHTML = "";
            return;
        }

        const res = await fetch(`https://photon.komoot.io/api/?q=${query}`);
        const data = await res.json();

        resultsBox.innerHTML = "";

        data.features.forEach(f => {
            const name = f.properties.name || "";
            const country = f.properties.country || "";
            const countryCode = f.properties.countrycode || "";

            const item = document.createElement("button");
            item.className = "list-group-item list-group-item-action";
            item.textContent = `${name}, ${country}`;

            item.addEventListener("click", () => {
                const [lon, lat] = f.geometry.coordinates;

                locationInput.value = item.textContent;

                latInput.value = lat;
                lonInput.value = lon;
                document.getElementById("country_code").value = countryCode;

                if (marker) map.removeLayer(marker);

                marker = L.marker([lat, lon]).addTo(map);
                map.setView([lat, lon], 14);

                resultsBox.innerHTML = "";
            });

            resultsBox.appendChild(item);
        });
    });
});
</script>

