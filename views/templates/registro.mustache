{{>partials/header}}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-10 col-sm-9 col-md-8 col-lg-7 col-xl-6">

            {{#success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{#mensaje}}{{mensaje}}{{/mensaje}}
                {{^mensaje}}Usuario registrado correctamente.{{/mensaje}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/success}}

            {{#error}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{error}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/error}}

            <div class="card">
                <div class="card-body p-4 p-sm-5">

                    <div class="text-center mb-4">
                        <h1 class="h4 fw-bold mb-1">Crear cuenta</h1>
                        <p class="text-muted mb-0">Registrate para jugar</p>
                    </div>

                    <form action="index.php?controller=login&method=registro" 
                          method="POST" 
                          enctype="multipart/form-data"
                          class="needs-validation" 
                          novalidate>

                        <div class="mb-3">
                            <label class="form-label">Usuario *</label>
                            <input type="text" class="form-control" name="nombre" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña *</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirmar contraseña *</label>
                            <input type="password" class="form-control" id="password_confirm" name="password_confirm" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre *</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Apellido *</label>
                            <input type="text" class="form-control" name="lastname" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fecha de nacimiento *</label>
                            <input type="date" class="form-control" name="birth_year" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Género *</label>
                            <select class="form-select" name="gender" required>
                                <option value="">Seleccionar…</option>
                                <option>Masculino</option>
                                <option>Femenino</option>
                                <option>Otro</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>

                        <!-- ===================================== -->
                        <!--           UBICACIÓN ÚNICA            -->
                        <!-- ===================================== -->
                        <div class="mb-3 position-relative">
                            <label class="form-label">Ubicación (país / ciudad)</label>
                            <input type="text" class="form-control" id="location" name="location" placeholder="Ej: Buenos Aires, Argentina">
                            <div id="location_results" class="list-group position-absolute w-100"></div>
                        </div>

                        <!-- Guardamos solo esto -->
                        <input type="hidden" id="lat" name="lat">
                        <input type="hidden" id="lng" name="lng">

                        <div class="mb-3">
                            <label class="form-label">Mapa</label>
                            <div id="map" style="height: 300px; border-radius: 10px;"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Foto de perfil</label>
                            <input type="file" class="form-control" name="profile_picture" accept="image/*">
                        </div>

                        <button class="btn btn-success btn-lg w-100">Registrarme</button>
                    </form>

                    <div class="text-center mt-4">
                        <small>¿Ya tenés cuenta? 
                            <a href="index.php?controller=login&method=login">Iniciá sesión</a>
                        </small>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<script>
// Validación contraseñas
document.addEventListener("DOMContentLoaded", () => {
    const pass = document.getElementById("password");
    const pass2 = document.getElementById("password_confirm");

    const validate = () => {
        pass2.setCustomValidity(pass.value !== pass2.value ? "No coincide" : "");
    };

    pass.addEventListener("input", validate);
    pass2.addEventListener("input", validate);
});
</script>

<script>
// Leaflet inicial
const map = L.map('map').setView([0,0], 2);

L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19
}).addTo(map);

let marker = null;

// Inputs
const locationInput = document.getElementById("location");
const resultsBox = document.getElementById("location_results");

// Ocultos
const lat = document.getElementById("lat");
const lng = document.getElementById("lng");

async function geocode(q) {
    const API_KEY = "pk.8e06c88eb28f9a2fce1d0e3b80fb24cb";
    const url = `https://us1.locationiq.com/v1/search?key=${API_KEY}&q=${encodeURIComponent(q)}&format=json`;

    try {
        const res = await fetch(url);
        if (!res.ok) return [];
        const data = await res.json();

        if (!Array.isArray(data)) return [];

        return data.map(x => ({
            name: x.display_name,
            lat: x.lat,
            lng: x.lon
        }));
    } catch (e) {
        return [];
    }
}

locationInput.addEventListener("input", async () => {
    const text = locationInput.value.trim();
    if (text.length < 2) {
        resultsBox.innerHTML = "";
        return;
    }

    const results = await geocode(text);

    resultsBox.innerHTML = "";

    results.forEach(item => {
        const btn = document.createElement("button");
        btn.type = "button";
        btn.className = "list-group-item list-group-item-action";
        btn.textContent = item.name;

        btn.onclick = () => {
            locationInput.value = item.name;
            lat.value = item.lat;
            lng.value = item.lng;

            resultsBox.innerHTML = "";

            map.setView([item.lat, item.lng], 13);

            if (marker) marker.setLatLng([item.lat, item.lng]);
            else marker = L.marker([item.lat, item.lng]).addTo(map);
        };

        resultsBox.appendChild(btn);
    });
});
</script>

