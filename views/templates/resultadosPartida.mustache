{{>partials/header}}

<section class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="app-card p-5 text-dark text-center">
                <h2 class="display-5 fw-bold mb-4">¡Partida Finalizada!</h2>
                
                <div class="mb-5">
                    <div class="display-1 fw-bold text-primary mb-2">{{puntos}}/{{total_preguntas}}</div>
                    <p class="fs-4 text-muted">Respuestas correctas</p>
                    
                    {{#estadisticas}}
                        <div class="mt-4 p-4 bg-light rounded">
                            <h3 class="h5 mb-3">Tus Estadísticas</h3>
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <div class="fw-bold text-primary">{{total_score}}</div>
                                    <small class="text-muted">Puntos Totales</small>
                                </div>
                                <div class="col-md-4">
                                    <div class="fw-bold text-success">{{games_played}}</div>
                                    <small class="text-muted">Partidas Jugadas</small>
                                </div>
                                <div class="col-md-4">
                                    <div class="fw-bold text-warning">{{difficulty_level}}</div>
                                    <small class="text-muted">Nivel Actual</small>
                                </div>
                            </div>
                        </div>
                    {{/estadisticas}}
                </div>

                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <a href="/partida/iniciarPartida" class="btn btn-primary btn-lg">Jugar Otra Partida</a>
                    <a href="/" class="btn btn-outline-secondary btn-lg">Volver al Inicio</a>
                </div>
            </div>
        </div>
    </div>
</section>

{{>partials/footer}}

